{
  "name": "epcvip-tools-hub",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "cd server && npm install && npm run build",
    "start": "cd server && npm run serve",
    "lint": "eslint js/ tools/js/ wordle/",
    "lint:fix": "eslint js/ tools/js/ wordle/ --fix",
    "format": "prettier --write \"js/**/*.js\" \"tools/js/**/*.js\"",
    "format:check": "prettier --check \"js/**/*.js\" \"tools/js/**/*.js\"",
    "prepare": "husky",
    "test": "cd server && npm test",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui"
  },
  "lint-staged": {
    "js/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "tools/js/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "wordle/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "server/src/**/*.ts": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.0"
  }
}
