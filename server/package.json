{
  "name": "epcvip-tools-hub-server",
  "version": "1.0.0",
  "description": "Multiplayer server for EPCVIP Tools Hub game",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc && npm run copy-static && npm run copy-shared",
    "copy-static": "mkdir -p public && cp -r ../index.html ../overworld.html ../login.html ../auth-callback.html ../style.css ../js ../css ../assets ../maps ../tools ./public/",
    "copy-shared": "mkdir -p public/shared && find ../shared -maxdepth 1 -type f -exec cp {} public/shared/ \\;",
    "serve": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "@types/jsonwebtoken": "^9.0.10",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^4.18.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.0",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
